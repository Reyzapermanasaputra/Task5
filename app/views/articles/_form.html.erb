<%= form_for @comment, url: comments_path, remote: true do |f| %>
  <%= f.hidden_field :article_id, value: @article.id %>
  <% if current_user %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
  <br />
  <%= f.label :comment %><br />
  <%= f.text_area :comment, cols: 30, rows: 2 %><br />
  <br />
  <%= f.submit :submit %>
<% end %>
